<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewLocal"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toStartOf="@+id/dividerResult"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_jersey_purple" />

    <EditText
        android:id="@+id/textViewResultadoLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintBottom_toBottomOf="@+id/dividerResult"
        app:layout_constraintEnd_toEndOf="@+id/imageViewLocal"
        app:layout_constraintHorizontal_bias="0.542"
        app:layout_constraintStart_toStartOf="@+id/imageViewLocal"
        app:layout_constraintTop_toTopOf="@+id/dividerResult" />

    <View
        android:id="@+id/dividerResult"
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLocal" />

    <ImageView
        android:id="@+id/imageViewVisitante"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.294"
        app:layout_constraintStart_toEndOf="@+id/dividerResult"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_jersey_purple" />

    <EditText
        android:id="@+id/textViewResultadoVisitante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_big"
        app:layout_constraintBottom_toBottomOf="@+id/dividerResult"
        app:layout_constraintEnd_toEndOf="@+id/imageViewVisitante"
        app:layout_constraintStart_toStartOf="@+id/imageViewVisitante"
        app:layout_constraintTop_toTopOf="@+id/dividerResult" />


</androidx.constraintlayout.widget.ConstraintLayout>